<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="396dp"
            android:layout_height="174dp"
            android:showWeekNumber="true"
            android:shownWeekCount="1"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="219dp"
            tools:text="Great job, you're almost there!"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="599dp"
            tools:text="Finished Workout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBar3"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="178dp"
            android:layout_height="158dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="259dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="178dp"
            android:layout_height="158dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="417dp" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="178dp"
            android:layout_height="158dp"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="417dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workout_record_recycler_view"
            android:layout_width="409dp"
            android:layout_height="110dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="620dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>